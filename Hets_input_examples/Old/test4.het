logic Hybridize

spec X = 
        baselogic Hybridize

        Basic_Spec  {
         
               baselogic Hybridize

               Basic_Spec {
                        
                        baselogic CASL
                        
                        Basic_Spec {
                        
                                sort X
                                preds p,q : X
                        }
                        nominal N
                        
                        @ N { forall x : X . p (x) }
                }
                nominal N'
                
                @ N' {@ N {forall x : X . p (x) }}
        }
        nominal N''
        
        @ N'' { @ N' {@ N {forall x : X . p (x) }} } 
